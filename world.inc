;---------------------------------------------------------------------------
drawGround:
	lr k, p
	
	li 64
	lr 5, A

_drawGround:
	lr A, 5
	lr 3, A

	li 0
	lr 1, A
	
	li 125
	lr 2, A
	
	pi point.draw
	
	li 0
	lr 1, A
	
	li 126
	lr 2, A
	
	pi point.draw
	
	ds 5
	bnz _drawGround
	
	pk
	
	
